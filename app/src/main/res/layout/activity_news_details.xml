<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Hello"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:id="@+id/detials_tittle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<!--    <ImageView-->
<!--        android:layout_margin="10dp"-->
<!--        android:src="@drawable/il_splash"-->
<!--        android:id="@+id/detials_image_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"/>-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/detials_image_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/il_splash"
        app:layout_constraintEnd_toStartOf="@+id/imvCornerRadiusWithStroke"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />



    <TextView
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:id="@+id/detials_content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="May 23 , 2022"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:id="@+id/publish_time_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>